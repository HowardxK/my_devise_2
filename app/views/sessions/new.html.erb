<h1 class="title">登入頁面</h1>
<hr>
<%= form_for(:session, url: login_path) do |f| %>
  <div class="field">
    <%= f.text_field :name, placeholder: "Name", class: 'input is-medium' %>
  </div>
  <div class="field">
    <%= f.password_field :password, placeholder: "Password", class: 'input is-medium' %>
  </div>
  <hr>
  <%= f.submit '登入', class: 'button is-dark is-medium' %>
<% end %>

<% if current_user %>
  <ul>
    <li><%= current_user.name %></li>
    <li><%= link_to "Log out", logout_path, method: "delete" %></li>
  </ul>
 <% else %>
  <ul>
    <li><%= link_to "Login", 'login' %></li>
    <li><%= link_to "Signup", 'signup' %></li>
  </ul>
<% end %>